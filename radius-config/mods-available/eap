# Default EAP type when client connects
# Use ttls or gpsk as default
default_eap_type = gpsk

# TLS config for TTLS inner tunnel

tls-config tls-common {
    private_key_file = ${certdir}/server.key
    certificate_file = ${certdir}/server.crt
    ca_file          = ${certdir}/ca.crt
    dh_file          = ${certdir}/dh
    fragment_size    = 1024
    include_length   = yes
}

# Configure TTLS with inner authentication
ttls {
    default_eap_type = mschapv2
    copy_request_to_tunnel = yes
    use_tunneled_reply = yes
}